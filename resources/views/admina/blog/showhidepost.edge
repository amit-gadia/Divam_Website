    @each(post in abc)
<div class="jumbotron jumbotron-success bg-success" style="#ffffff">
  <div class="btn-group dropleft float-right" style="margin-top:-5%;">
    <div class="btn  test float-right" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    </div>
    <div class="dropdown-menu bg-danger">
      <a class="dropdown-item" style="color:#ffffff;" href="/admin/blog/edit/{{post.id}}">Edit</a>
      <a class="dropdown-item" style="color:#ffffff;" data-toggle="modal" data-target="#Modalv">Show</a>
      <a class="dropdown-item" style="color:#ffffff;" data-toggle="modal" data-target="#Modald">Delete</a>
      <a class="dropdown-item" style="color:#ffffff;" href="/admin/blog/posts/{{post.id}}">View Post</a>
    </div>
    
<div class="modal fade" id="Modalv" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{post.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are You sure to change View Hide to Visible
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="/admin/blog/posts/{{post.id}}"><button type="button" class="btn btn-success">Preview</button></a>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="Modald" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{post.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <a href="/admin/blog/del/{{post.id}}"><button type="button" class="btn btn-danger" >Confirm</button></a>
      </div>
    </div>
  </div>
  </div>
</div>

  <h3 class="display-5" style="color:#000000;margin-top:0">
  @if(post.title===null)
    Blog Title:No Title
    @else
Blog Title:
    <h1 style="overflow-wrap:break-word;color:#000000;" value={{post.title}}>{{post.title}}</h1>
    @endif
    </h3>
  <p class="lead" style="color:#000000;">
  Blog Content:
  </p>
  @if(post.content===null)
<p style="color:#000000;"> No Content In Blog</p>
    @else
    <div class="form-group">
      <p style="overflow-wrap: break-word;color:#000000;" name="blog_data" id="blog_data" rows="3" value={{{post.content.substring(1,200)}}}></textarea>
    </div>
    @endif
  
   @if(post.content.length>200)
    <a class="btn btn-primary btn-lg" href="/admin/blog/posts/{{post.id}}" role="button">Read more</a>
    <a class="btn btn-primary btn-lg" href="/admin/blog/posts/{{post.id}}" role="button">Open Post</a>
   @else
   <a class="btn btn-primary btn-lg" href="/admin/blog/posts/{{post.id}}" role="button">Open Post</a>
 
    @endif
    
  </p>
</div>
  
@endeach

</body>
</html>